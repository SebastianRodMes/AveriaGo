<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".report.CreateReportStep1Activity">

    <!-- Toolbar con botón de regreso -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Reportar Avería"
        app:titleTextColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido con scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Indicador de paso -->
            <TextView
                android:id="@+id/tvStepIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paso 1 de 3: Selecciona el servicio"
                android:textColor="#6B7280"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Pregunta -->
            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="¿Qué servicio presenta problemas?"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStepIndicator" />

            <!-- Opción: Internet -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardInternet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Icono Internet -->
                    <View
                        android:id="@+id/iconInternetBg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_service_icon_blue"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iconInternet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_globe"
                        app:layout_constraintBottom_toBottomOf="@+id/iconInternetBg"
                        app:layout_constraintEnd_toEndOf="@+id/iconInternetBg"
                        app:layout_constraintStart_toStartOf="@+id/iconInternetBg"
                        app:layout_constraintTop_toTopOf="@+id/iconInternetBg"
                        app:tint="#FFFFFF" />

                    <!-- Texto Internet -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Internet"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/iconInternetBg"
                        app:layout_constraintEnd_toStartOf="@+id/chevronInternet"
                        app:layout_constraintStart_toEndOf="@+id/iconInternetBg"
                        app:layout_constraintTop_toTopOf="@+id/iconInternetBg" />

                    <!-- Chevron -->
                    <ImageView
                        android:id="@+id/chevronInternet"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="@+id/iconInternetBg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iconInternetBg"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Opción: Television -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTelevision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardInternet"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Icono Television -->
                    <View
                        android:id="@+id/iconTelevisionBg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_service_icon_purple"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iconTelevision"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tv"
                        app:layout_constraintBottom_toBottomOf="@+id/iconTelevisionBg"
                        app:layout_constraintEnd_toEndOf="@+id/iconTelevisionBg"
                        app:layout_constraintStart_toStartOf="@+id/iconTelevisionBg"
                        app:layout_constraintTop_toTopOf="@+id/iconTelevisionBg"
                        app:tint="#FFFFFF" />

                    <!-- Texto Television -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Television"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/iconTelevisionBg"
                        app:layout_constraintEnd_toStartOf="@+id/chevronTelevision"
                        app:layout_constraintStart_toEndOf="@+id/iconTelevisionBg"
                        app:layout_constraintTop_toTopOf="@+id/iconTelevisionBg" />

                    <!-- Chevron -->
                    <ImageView
                        android:id="@+id/chevronTelevision"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="@+id/iconTelevisionBg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iconTelevisionBg"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Opción: Teléfono -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardTelevision"
                app:strokeColor="#E5E7EB"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Icono Teléfono -->
                    <View
                        android:id="@+id/iconPhoneBg"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_service_icon_green"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iconPhone"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        app:layout_constraintBottom_toBottomOf="@+id/iconPhoneBg"
                        app:layout_constraintEnd_toEndOf="@+id/iconPhoneBg"
                        app:layout_constraintStart_toStartOf="@+id/iconPhoneBg"
                        app:layout_constraintTop_toTopOf="@+id/iconPhoneBg"
                        app:tint="#FFFFFF" />

                    <!-- Texto Teléfono -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Teléfono"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/iconPhoneBg"
                        app:layout_constraintEnd_toStartOf="@+id/chevronPhone"
                        app:layout_constraintStart_toEndOf="@+id/iconPhoneBg"
                        app:layout_constraintTop_toTopOf="@+id/iconPhoneBg" />

                    <!-- Chevron -->
                    <ImageView
                        android:id="@+id/chevronPhone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:layout_constraintBottom_toBottomOf="@+id/iconPhoneBg"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/iconPhoneBg"
                        app:tint="#9CA3AF" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>